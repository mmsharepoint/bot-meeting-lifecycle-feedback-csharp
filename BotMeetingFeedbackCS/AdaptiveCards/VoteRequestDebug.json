{
  "type": "AdaptiveCard",
  "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4",
  "refresh": {
    "action": {
      "type": "Action.Execute",
      "title": "Refresh",
      "verb": "alreadyVoted",
      "data": {
        "meetingID": "${meetingID}",
        "votedPersons": "${votedPersons}",
        "votes1": "${formatNumber(votes1,0)}",
        "votes2": "${formatNumber(votes2,0)}",
        "votes3": "${formatNumber(votes3,0)}",
        "votes4": "${formatNumber(votes4,0)}",
        "votes5": "${formatNumber(votes5,0)}"
      }
    },
    "userIds": "${votedPersons}"
  },
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "${_hosturl}/images/pnp_logo.png",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "items": [
            {
              "type": "TextBlock",
              "text": "How did you like the meeting?",
              "style": "heading",
              "wrap": true
            }
          ],
          "width": "stretch"
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "title": " ",
          "verb": "vote_1",
          "iconUrl": "${_hosturl}/images/1.png",
